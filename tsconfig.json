{
    "include": ["src"],
    "exclude": ["**/*.test.*"],
    "compilerOptions": {
        "alwaysStrict": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "CommonJS",
        "noImplicitAny": false,
        "outDir": "dist",
        "resolveJsonModule": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "ES2020"
    }
}
