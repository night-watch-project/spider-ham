{
  "private": true,
  "name": "spider-ham",
  "description": "Peter Porker as Spider-Ham",
  "version": "0.6.0",
  "author": "Night Watch Project",
  "license": "MIT",
  "repository": "git@github.com:night-watch-project/spider-ham.git",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "nest build",
    "start:dev": "NODE_ENV=dev nest start --watch",
    "start:debug": "NODE_ENV=dev nest start --watch --debug",
    "start:prod": "NODE_ENV=prod node dist/src/main",
    "docker:build:base": "docker build -t nightwatchproject/base -f Dockerfile.base .",
    "docker:build:app": "docker build -t nightwatchproject/spider-ham .",
    "docker:start:prod": "docker run -d -p 3000:3000 nightwatchproject/spider-ham"
  },
  "dependencies": {
    "@nestjs/common": "^7.1.2",
    "@nestjs/core": "^7.1.2",
    "@nestjs/platform-fastify": "^7.1.2",
    "@nestjs/swagger": "^4.5.9",
    "dotenv-flow": "^3.1.0",
    "fastify-swagger": "^2.6.0",
    "jsdom": "^16.2.2",
    "playwright-firefox": "^1.0.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.2.0",
    "@types/dotenv-flow": "^3.0.0",
    "@types/jsdom": "^16.2.3",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5",
    "typescript": "^3.9.3"
  }
}
