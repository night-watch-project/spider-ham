{
    "compilerOptions": {
        "plugins": [
            {
                "name": "@nestjs/swagger/plugin",
                "options": {
                    "dtoFileNameSuffix": [
                        ".dto.ts",
                        ".entity.ts",
                        ".class.ts",
                        ".interface.ts",
                        ".enum.ts"
                    ],
                    "introspectComments": true
                }
            }
        ]
    }
}
